{
  "compilerOptions": {
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "./",
    "outDir": "dist",
    "baseUrl": "./apps/server",
    "paths": {
      "*": [
        "node_modules/*",
        "bicycle/",
        "ecom/"
      ]
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx"
  ]
}